@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-sm-10 col-md-6 col-lg-5">
            <div class="card card-modern">
                <div class="card-body p-5">
                    <h1 class="card-title text-center mb-1">Welcome Back</h1>
                    <p class="text-muted text-center mb-4">Sign in to your account</p>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> Please correct the errors below.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-500">Email Address</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label fw-500">Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 fw-600 py-2 mb-3">Sign In</button>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="mb-2">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary text-decoration-none">Forgot your password?</a>
                        </p>
                        <p class="mb-2">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary text-decoration-none">Resend email confirmation</a>
                        </p>
                        <p class="text-muted">
                            Don't have an account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-600 text-decoration-none">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

