@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-12 col-sm-10 col-md-7 col-lg-6">
            <div class="card card-modern">
                <div class="card-body p-5">
                    <h1 class="card-title text-center mb-1">Create Account</h1>
                    <p class="text-muted text-center mb-4">Join us and start renting cars today</p>

                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> Please correct the errors below.
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-500">Email Address</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.FirstName" class="form-label fw-500">First Name</label>
                                <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" placeholder="John" />
                                <span asp-validation-for="Input.FirstName" class="text-danger small d-block mt-1"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.LastName" class="form-label fw-500">Last Name</label>
                                <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" placeholder="Doe" />
                                <span asp-validation-for="Input.LastName" class="text-danger small d-block mt-1"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label fw-500">Address</label>
                            <input asp-for="Input.Address" class="form-control" autocomplete="street-address" aria-required="true" placeholder="123 Main Street" />
                            <span asp-validation-for="Input.Address" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-500">Password</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-500">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <button id="registerSubmit" type="submit" class="btn btn-primary w-100 fw-600 py-2 mb-3">Create Account</button>
                    </form>

                    <hr class="my-4" />

                    <div class="text-center">
                        <p class="text-muted">
                            Already have an account?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-600 text-decoration-none">Sign in here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

